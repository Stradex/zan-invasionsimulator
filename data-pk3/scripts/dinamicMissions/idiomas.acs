str strIdiomas[DMISSIONS_LANGUAGE] = {
	"ES", //Spanish
	"EN" //English
};

function int getIdioma(str lang)
{
	int i=0;
	for (i=0; i < DMISSIONS_LANGUAGE; i++)
	{
		if (StrICmp(lang, strIdiomas[i]) == 0)
			return i;
	}
	return 1; //Default ingles en caso de error
}

